  <script>
    function tinhCuoc() {
      const loaiXe = document.getElementById('loaiXe').value;
      const km = parseFloat(document.getElementById('km').value) || 0;
      const ngayCho = parseFloat(document.getElementById('ngayCho').value) || 0;
      const gioCho = parseFloat(document.getElementById('gioCho').value) || 0;
      const chieu = document.getElementById('chieu').value;

      let donGia = 0;
      let phiChoNgay = 0;

      if (loaiXe === '4') {
        donGia = 11000;
        phiChoNgay = 330000;
      } else if (loaiXe === '7') {
        donGia = 13200;
        phiChoNgay = 440000;
      } else if (loaiXe === '16') {
        donGia = 15400;
        phiChoNgay = 550000;
      }

      const tienKm = km * donGia;
      const tienNgayCho = ngayCho * phiChoNgay;
      const tienGioCho = gioCho * 60000;

      let tong = tienKm + tienNgayCho + tienGioCho;

      if (chieu === "1") {
        tong *= 1.30; // M·ªôt chi·ªÅu tƒÉng 30%
      } else if (chieu === "2") {
        tong *= 0.90; // Hai chi·ªÅu gi·∫£m 10%
      }

      document.getElementById('result').innerText = "T·ªïng c∆∞·ªõc: " + Math.round(tong).toLocaleString('vi-VN') + " ƒë";
    }
  </script>
