<body>
  <div class="container">
    <h2>Tính Cước Xe Hợp Đồng</h2>

    <label for="loaiXe">Loại xe:</label>
    <select id="loaiXe">
      <option value="4">4 chỗ</option>
      <option value="7">7 chỗ</option>
      <option value="16">16 chỗ</option>
    </select>

    <label for="km">Số km:</label>
    <input type="number" id="km" placeholder="Nhập số km" />

    <label for="ngayCho">Số ngày chờ:</label>
    <input type="number" id="ngayCho" placeholder="Nhập số ngày chờ" />

    <label for="gioCho">Số giờ chờ:</label>
    <input type="number" id="gioCho" placeholder="Nhập số giờ chờ" />

    <label for="chieu">Hình thức chuyến đi:</label>
    <select id="chieu">
      <option value="1">Một chiều </option>
      <option value="2">Hai chiều </option>
    </select>

    <button onclick="tinhCuoc()">Tính cước</button>

    <div id="result"></div>
  </div>

  <!-- Nút gọi -->
  <a href="tel:0944139617" class="call-button"></a>

  <script>
    function tinhCuoc() {
      const loaiXe = document.getElementById("loaiXe").value;
      const km = parseFloat(document.getElementById("km").value) || 0;
      const ngayCho = parseFloat(document.getElementById("ngayCho").value) || 0;
      const gioCho = parseFloat(document.getElementById("gioCho").value) || 0;
      const chieu = document.getElementById("chieu").value;

      let donGia = 0;

      // Giá theo loại xe
      if (loaiXe === "4") {
        donGia = 11000;
      } else if (loaiXe === "7") {
        donGia = 13200;
      } else if (loaiXe === "16") {
        donGia = 15400;
      }

      const phiChoNgay = 350000; // Giống nhau cho mọi xe
      const tienKm = km * donGia;
      const tienNgayCho = ngayCho * phiChoNgay;
      const tienGioCho = gioCho * 60000;
      let tong = tienKm + tienNgayCho + tienGioCho;

      if (chieu === "1") {
        tong *= 1.3; // Một chiều
      } else if (chieu === "2") {
        tong *= 0.9; // Hai chiều 
      }

      document.getElementById("result").innerText =
        "Tổng cước: " + Math.round(tong).toLocaleString("vi-VN") + " đ";
    }
  </script>
